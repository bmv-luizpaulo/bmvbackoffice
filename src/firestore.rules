
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isManager() {
      return request.auth.token.isManager == true || request.auth.token.isDev == true;
    }

    function isDev() {
        return request.auth.token.isDev == true;
    }

    // ===== REGRAS DE USUÁRIOS E PERMISSÕES =====
    match /users/{userId} {
      allow get, update: if isManager() || isOwner(userId);
      allow list, create: if isManager();
    }

    match /users/{userId}/activityLogs/{logId} {
      allow read: if isManager() || isOwner(userId);
    }

    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId);
    }

    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if isManager();
    }

    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if isManager();
    }
    
    match /directorates/{directorateId} {
      allow read: if request.auth != null;
      allow write: if isManager();
    }

    // ===== REGRAS OPERACIONAIS (PROJETOS E TAREFAS) =====
    match /projects/{projectId} {
      // Leitura de um único projeto permitida para gestores ou membros.
      allow get: if isManager() || request.auth.uid == resource.data.ownerId || request.auth.uid in resource.data.teamMembers;
      // Listagem da coleção inteira é permitida apenas para gestores. 
      // Usuários comuns devem usar consultas filtradas ('where') que são validadas pela regra de 'get'.
      allow list: if isManager();
      // Escrita permitida para gestores ou o dono do projeto.
      allow write: if isManager() || request.auth.uid == resource.data.ownerId;
      // Criação permitida apenas para gestores.
      allow create: if isManager();
    }
    
    match /projects/{projectId}/{subcollection}/{docId} {
      allow read, write: if isManager() || get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid || request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.teamMembers;
    }

    match /tasks/{taskId} {
      allow get: if isManager() || resource.data.assigneeId == request.auth.uid;
      allow list: if isManager() || (request.query.where != null && request.query.where.size() > 0 && request.query.where[0][0] == 'assigneeId' && request.query.where[0][2] == request.auth.uid);
      allow write: if isManager() || request.auth.uid == resource.data.assigneeId || (resource.data.assigneeId == null && request.auth.uid != null);
      allow create: if request.auth != null;
    }

    match /meetings/{meetingId} {
       allow read, write: if isManager() || request.auth.uid in resource.data.participantIds;
       allow create: if request.auth != null;
    }

    // ===== REGRAS COMERCIAIS =====
    match /contacts/{contactId} {
      allow read, write, create: if request.auth.token.canManageContacts == true || isDev();
    }
    
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.canManageProductsAndSeals == true || isDev();
    }
    
    match /seals/{sealId} {
      allow read, write: if request.auth.token.canManageProductsAndSeals == true || isDev();
    }
    
    match /sealOrders/{sealOrderId} {
      allow read, write: if request.auth.token.canManageProductsAndSeals == true || isDev();
    }
    
    // ===== REGRAS FINANCEIRAS =====
    match /reimbursements/{reimbursementId} {
      allow create: if request.auth.uid == request.resource.data.requesterId;
      allow read, update: if request.auth.uid == resource.data.requesterId || request.auth.token.canAccessFinancial == true || isDev();
    }
    
    match /costCenters/{costCenterId} {
       allow read, write: if request.auth.token.canAccessFinancial == true || isDev();
    }
    
    match /contracts/{contractId} {
       allow read, write: if request.auth.token.canAccessFinancial == true || isDev();
    }

    // ===== REGRAS DE GESTÃO DE ATIVOS =====
    match /assets/{assetId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    match /assets/{assetId}/{subcollection}/{docId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    match /maintenances/{maintenanceId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
     match /assetUsageContracts/{contractId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    match /documentTemplates/{templateId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    
    // ===== REGRAS DE CHECKLISTS =====
    match /checklists/{checklistId} {
      allow read: if request.auth != null; 
      allow write: if request.auth.token.canManageChecklists == true || isDev();
    }
     match /checklists/{checklistId}/items/{itemId} {
      allow read, write: if request.auth.token.canManageChecklists == true || isDev();
    }
    match /checklistExecutions/{executionId} {
       allow read, write: if request.auth != null; 
    }

    // ===== REGRAS DE SUPORTE E LOGS =====
    match /tickets/{ticketId} {
      allow create: if request.auth.uid == request.resource.data.requesterId;
      allow read, update: if request.auth.uid == resource.data.requesterId || request.auth.token.canManageSupport == true || isDev();
    }
    match /errorLogs/{logId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isDev();
    }
    
    // Regra de fallback: nega tudo que não foi permitido explicitamente.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
