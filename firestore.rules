rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isDev() {
      let roleId = request.auth.token.roleId;
      // Checa o claim E a permissão no documento do cargo para redundância e segurança.
      return request.auth.token.isDev == true || (roleId != null && get(/databases/$(database)/documents/roles/$(roleId)).data.permissions.isDev == true);
    }
    
    function hasPermission(permission) {
      let roleId = request.auth.token.roleId;
      if (roleId == null) {
        return false;
      }
      let rolePermissions = get(/databases/$(database)/documents/roles/$(roleId)).data.permissions;
      return isDev() || rolePermissions[permission] == true;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isProjectMember(projectId) {
      let projectData = get(/databases/$(database)/documents/projects/$(projectId)).data;
      return isOwner(projectData.ownerId) || request.auth.uid in projectData.teamMembers;
    }

    match /users/{userId} {
      allow read: if isDev() || hasPermission('canManageUsers') || isOwner(userId);
      allow list: if hasPermission('canManageUsers');
      allow write: if isDev() || hasPermission('canManageUsers') || isOwner(userId);

      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    match /projects/{projectId} {
      allow list: if hasPermission('canViewAllProjects');
      allow read: if hasPermission('canViewAllProjects') || isProjectMember(projectId);
      allow create, update, delete: if hasPermission('canManageProjects');

      match /stages/{stageId} {
        allow list, read: if hasPermission('canViewAllProjects') || isProjectMember(projectId);
        allow create, update, delete: if hasPermission('canManageProjects');
      }

      match /tasks/{taskId} {
        allow list, read: if hasPermission('canViewAllProjects') || isProjectMember(projectId);
        allow create, update, delete: if hasPermission('canManageProjects') || isProjectMember(projectId);
      }
      
      match /files/{fileId} {
        allow list, read: if hasPermission('canViewAllProjects') || isProjectMember(projectId);
        allow create, delete: if hasPermission('canManageProjects') || isProjectMember(projectId);
      }
    }

    match /teams/{teamId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageUsers');
    }
    
    match /directorates/{directorateId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageUsers');
    }

    match /roles/{roleId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageUsers');
    }

    match /contacts/{contactId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageContacts');
    }
    
    match /contracts/{contractId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageAssets');
    }

    match /products/{productId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageProductsAndSeals');
    }

    match /seals/{sealId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageProductsAndSeals');
    }

    match /checklists/{checklistId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageChecklists');

      match /items/{itemId} {
        allow list, read, update: if request.auth != null;
        allow create, delete: if hasPermission('canManageChecklists');
      }
    }

    match /checklistExecutions/{executionId} {
      allow list, read, create: if request.auth != null;
      allow update, delete: if hasPermission('canManageChecklists');
    }
    
    match /assets/{assetId} {
        allow list, read: if request.auth != null;
        allow create, update, delete: if hasPermission('canManageAssets');

        match /history/{historyId} {
            allow list, read: if hasPermission('canManageAssets');
            allow create: if request.auth != null;
        }
    }
    
    match /maintenances/{maintenanceId} {
        allow list, read: if request.auth != null;
        allow create, update, delete: if hasPermission('canManageAssets');
    }

    match /reimbursements/{reimbursementId} {
      allow list: if hasPermission('canAccessFinancial');
      allow read: if hasPermission('canAccessFinancial') || isOwner(resource.data.requesterId);
      allow create: if request.auth != null;
      allow update: if hasPermission('canAccessFinancial') || (isOwner(resource.data.requesterId) && resource.data.status == 'Pendente');
      allow delete: if hasPermission('canAccessFinancial');
    }
    
    match /costCenters/{costCenterId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canAccessFinancial');
    }
    
    match /conversations/{conversationId} {
      allow list: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds;
      allow read, update, delete: if request.auth.uid in resource.data.userIds;
      allow create: if request.auth != null;
    }

    match /conversations/{conversationId}/messages/{messageId} {
      allow read, write: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds.hasAny([request.auth.uid]);
    }

    match /tickets/{ticketId} {
      allow list: if hasPermission('canManageSupport');
      allow read: if hasPermission('canManageSupport') || isOwner(resource.data.requesterId);
      allow create: if request.auth != null;
      allow update: if hasPermission('canManageSupport') || isOwner(resource.data.requesterId);
      allow delete: if hasPermission('canManageSupport');
    }

    match /developerTools/{toolId} {
      allow read, write: if isDev();
    }

    match /errorLogs/{errorId} {
        allow create: if request.auth != null;
        allow list, read, update, delete: if isDev() || hasPermission('canManageSupport');
    }

    match /assetUsageContracts/{contractId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageAssets');
      match /annexes/{annexId} {
        allow list, read: if request.auth != null;
        allow create, update, delete: if hasPermission('canManageAssets');
      }
    }

    match /documentTemplates/{templateId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if hasPermission('canManageAssets');
    }

    match /userActivityLogs/{logId} {
      allow read: if hasPermission('canManageUsers');
      allow create: if request.auth != null;
    }
  }
}
