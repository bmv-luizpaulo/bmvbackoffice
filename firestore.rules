rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isDev() {
      // Use custom claims from the auth token. This is more efficient and reliable.
      return request.auth.token.isDev == true;
    }

    function isManager() {
      // Use custom claims from the auth token.
      return request.auth.token.isManager == true;
    }
    
    function isProjectMember(projectId) {
      let projectData = get(/databases/$(database)/documents/projects/$(projectId)).data;
      return request.auth.uid == projectData.ownerId || request.auth.uid in projectData.teamMembers;
    }

    match /users/{userId} {
      allow list, read: if isDev() || isManager() || request.auth != null;
      allow write: if isDev() || request.auth.uid == userId;

      match /notifications/{notificationId} {
        allow read, write: if isDev() || request.auth.uid == userId;
      }
    }
    
    match /projects/{projectId} {
      allow list: if request.auth != null;
      allow read, update: if isDev() || isManager() || isProjectMember(projectId);
      allow create: if isDev() || isManager();
      allow delete: if isDev() || isManager();

      match /stages/{stageId} {
        allow list, read: if isDev() || isManager() || isProjectMember(projectId);
        allow create, update, delete: if isDev() || isManager();
      }

      match /tasks/{taskId} {
        allow list, read: if isDev() || isManager() || isProjectMember(projectId);
        allow create, update, delete: if isDev() || isManager() || request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId;
      }
      
      match /files/{fileId} {
        allow list, read: if isDev() || isManager() || isProjectMember(projectId);
        allow create, delete: if isDev() || isManager() || request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId;
      }
    }

    match /teams/{teamId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isDev() || isManager();
    }
    
    match /directorates/{directorateId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isDev() || isManager();
    }

    match /roles/{roleId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isDev() || isManager();
    }

    match /contacts/{contactId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isDev() || isManager();
    }
    
    match /contracts/{contractId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isDev() || isManager();
    }

    match /products/{productId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isDev() || isManager();
    }

    match /seals/{sealId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isDev() || isManager();
    }

    match /checklists/{checklistId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isDev() || isManager();

      match /items/{itemId} {
        allow list, read, update: if request.auth != null;
        allow create, delete: if isDev() || isManager();
      }
    }

    match /checklistExecutions/{executionId} {
      allow list, read, create: if request.auth != null;
      allow update, delete: if isDev() || isManager();
    }
    
    match /assets/{assetId} {
        allow list, read: if request.auth != null;
        allow create, update, delete: if isDev() || isManager();

        match /history/{historyId} {
            allow list, read: if isDev() || isManager();
            allow create: if request.auth != null;
        }
    }
    
    match /maintenances/{maintenanceId} {
        allow list, read: if request.auth != null;
        allow create, update, delete: if isDev() || isManager();
    }

    match /reimbursements/{reimbursementId} {
      allow list: if request.auth != null;
      allow read: if isDev() || isManager() || request.auth.uid == resource.data.requesterId;
      allow create: if request.auth != null;
      allow update: if isDev() || isManager() || (request.auth.uid == resource.data.requesterId && resource.data.status == 'Pendente');
      allow delete: if isDev() || isManager();
    }
    
    match /costCenters/{costCenterId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isDev() || isManager();
    }
    
    match /conversations/{conversationId} {
      // Firestore evaluates read rules per document; ensure the user is a participant
      allow read: if isDev() || (request.auth.uid in resource.data.userIds);
      // Allow updates/deletes only to participants (or dev)
      allow update, delete: if isDev() || (request.auth.uid in resource.data.userIds);
      // Allow creation if the creating user includes themselves in the participants
      allow create: if isDev() || (request.auth.uid in request.resource.data.userIds);

      match /messages/{messageId} {
         // Allow read/write on messages if the user is part of the parent conversation
         allow read, write: if isDev() || (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds);
      }
    }

    match /tickets/{ticketId} {
      allow list: if request.auth != null;
      allow read: if isDev() || isManager() || request.auth.uid == resource.data.requesterId;
      allow create: if request.auth != null;
      allow update: if isDev() || isManager() || request.auth.uid == resource.data.requesterId;
      allow delete: if isDev() || isManager();
    }

    match /developerTools/{toolId} {
      allow read, write: if isDev();
    }

    match /errorLogs/{errorId} {
        allow create: if request.auth != null;
        allow list, read, update, delete: if isDev() || isManager();
    }

    match /userActivityLogs/{logId} {
      allow read: if isDev() || isManager();
      allow create: if request.auth != null;
    }
  }
}
