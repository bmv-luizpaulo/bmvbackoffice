rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isDev() {
      // Use custom claims from the auth token. This is more efficient and reliable.
      return request.auth.token.isDev == true;
    }

    function isManager() {
      // Use custom claims from the auth token.
      return request.auth.token.isManager == true;
    }

    function isPrivileged() {
      // A privileged user is either a developer or a manager.
      return isDev() || isManager();
    }
    
    function isProjectMember(projectId) {
      let projectData = get(/databases/$(database)/documents/projects/$(projectId)).data;
      return request.auth.uid == projectData.ownerId || request.auth.uid in projectData.teamMembers;
    }

    match /users/{userId} {
      allow list, read: if request.auth != null;
      allow write: if isPrivileged() || request.auth.uid == userId;

      match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    match /projects/{projectId} {
      allow list: if request.auth != null;
      allow read: if isPrivileged() || isProjectMember(projectId);
      allow create, update, delete: if isPrivileged() || isProjectMember(projectId);

      match /stages/{stageId} {
        allow list, read: if isPrivileged() || isProjectMember(projectId);
        allow create, update, delete: if isPrivileged() || isProjectMember(projectId);
      }

      match /tasks/{taskId} {
        allow list, read: if isPrivileged() || isProjectMember(projectId);
        allow create, update, delete: if isPrivileged() || isProjectMember(projectId);
      }
      
      match /files/{fileId} {
        allow list, read: if isPrivileged() || isProjectMember(projectId);
        allow create, delete: if isPrivileged() || isProjectMember(projectId);
      }
    }

    match /teams/{teamId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
    }
    
    match /directorates/{directorateId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
    }

    match /roles/{roleId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
    }

    match /contacts/{contactId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
    }
    
    match /contracts/{contractId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
    }

    match /products/{productId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
    }

    match /seals/{sealId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
    }

    match /checklists/{checklistId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();

      match /items/{itemId} {
        allow list, read, update: if request.auth != null;
        allow create, delete: if isPrivileged();
      }
    }

    match /checklistExecutions/{executionId} {
      allow list, read, create: if request.auth != null;
      allow update, delete: if isPrivileged();
    }
    
    match /assets/{assetId} {
        allow list, read: if request.auth != null;
        allow create, update, delete: if isPrivileged();

        match /history/{historyId} {
            allow list, read: if isPrivileged();
            allow create: if request.auth != null;
        }
    }
    
    match /maintenances/{maintenanceId} {
        allow list, read: if request.auth != null;
        allow create, update, delete: if isPrivileged();
    }

    match /reimbursements/{reimbursementId} {
      allow list: if request.auth != null;
      allow read: if isPrivileged() || request.auth.uid == resource.data.requesterId;
      allow create: if request.auth != null;
      allow update: if isPrivileged() || (request.auth.uid == resource.data.requesterId && resource.data.status == 'Pendente');
      allow delete: if isPrivileged();
    }
    
    match /costCenters/{costCenterId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
    }
    
    match /conversations/{conversationId} {
      allow list: if request.auth.uid in request.query.where.userIds.value;
      allow read, update, delete: if request.auth.uid in resource.data.userIds;
      allow create: if request.auth != null;
    }

    match /conversations/{conversationId}/messages/{messageId} {
      allow read, write: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds.hasAny([request.auth.uid]);
    }

    match /tickets/{ticketId} {
      allow list: if request.auth != null;
      allow read: if isPrivileged() || request.auth.uid == resource.data.requesterId;
      allow create: if request.auth != null;
      allow update: if isPrivileged() || request.auth.uid == resource.data.requesterId;
      allow delete: if isPrivileged();
    }

    match /developerTools/{toolId} {
      allow read, write: if isDev();
    }

    match /errorLogs/{errorId} {
        allow create: if request.auth != null;
        allow list, read, update, delete: if isPrivileged();
    }

    match /assetUsageContracts/{contractId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
      match /annexes/{annexId} {
        allow list, read: if request.auth != null;
        allow create, update, delete: if isPrivileged();
      }
    }

    match /documentTemplates/{templateId} {
      allow list, read: if request.auth != null;
      allow create, update, delete: if isPrivileged();
    }

    match /userActivityLogs/{logId} {
      allow read: if isPrivileged();
      allow create: if request.auth != null;
    }
  }
}
