rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: allow all authenticated users to read and write all data.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Explicitly allow list/get for all collections for authenticated users.
    match /{path=**}/{document} {
      allow get, list: if request.auth != null;
    }
  }
}
