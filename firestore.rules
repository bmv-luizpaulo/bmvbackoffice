rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isDev() {
      // Check if the user document exists and has the isDev flag.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isDev == true;
    }

    function isManager() {
      // Check if the user document and role document exist before trying to access them.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId != null &&
             exists(/databases/$(database)/documents/roles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId)) &&
             get(/databases/$(database)/documents/roles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId)).data.isManager == true;
    }

    match /users/{userId} {
      allow read, write: if isDev() || request.auth.uid == userId;

      match /notifications/{notificationId} {
        allow read, write: if isDev() || request.auth.uid == userId;
      }
    }

    match /projects/{projectId}/{document=**} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /teams/{teamId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }
    
    match /directorates/{directorateId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /roles/{roleId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /contacts/{contactId} {
      allow read, write: if isDev() || request.auth != null;
    }
    
    match /contracts/{contractId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /chats/{chatId} {
      // Permite ler (get ou list) um chat se o ID do usuário estiver no array 'userIds' do documento.
      // Esta regra é suficiente para validar uma consulta 'array-contains'.
      allow read: if request.auth.uid in resource.data.userIds;
      
      // Permite criar um chat se o ID do usuário estiver no array 'userIds' do novo documento.
      allow create: if request.auth.uid in request.resource.data.userIds;
      
      // Permite atualizar ou excluir um chat se o ID do usuário estiver no array 'userIds' do documento existente.
      allow update, delete: if request.auth.uid in resource.data.userIds;
      
      match /messages/{messageId} {
        // Permite ler/escrever mensagens apenas se o usuário for parte do chat pai.
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
      }
    }
    
    match /products/{productId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /seals/{sealId} {
        allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /checklists/{checklistId}/{document=**} {
        allow read, write: if isDev() || isManager() || request.auth != null;
    }
    
    match /assets/{assetId}/{document=**} {
        allow read, write: if isDev() || isManager() || request.auth != null;
    }
    
    match /maintenances/{maintenanceId} {
        allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /reimbursements/{reimbursementId} {
      allow read, create, update, delete: if isDev() || isManager() || request.auth.uid == resource.data.requesterId;
    }
    
    match /costCenters/{costCenterId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }
  }
}
