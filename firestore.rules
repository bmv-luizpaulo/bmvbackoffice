rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Allow authenticated users to read and write to collaborative collections
    match /projects/{projectId}/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /teams/{teamId} {
      allow read, write: if request.auth != null;
    }
    
    match /directorates/{directorateId} {
      allow read, write: if request.auth != null;
    }

    match /roles/{roleId} {
      allow read, write: if request.auth != null;
    }

    match /contacts/{contactId} {
      allow read, write: if request.auth != null;
    }
    
    match /contracts/{contractId} {
      allow read, write: if request.auth != null;
    }

    match /chats/{chatId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /products/{productId} {
      allow read, write: if request.auth != null;
    }

    match /seals/{sealId} {
        allow read, write: if request.auth != null;
    }

    match /checklists/{checklistId}/{document=**} {
        allow read, write: if request.auth != null;
    }
    
    match /assets/{assetId}/{document=**} {
        allow read, write: if request.auth != null;
    }
    
    match /maintenances/{maintenanceId} {
        allow read, write: if request.auth != null;
    }

    match /reimbursements/{reimbursementId} {
      allow read, write: if request.auth != null;
    }
    
    match /costCenters/{costCenterId} {
      allow read, write: if request.auth != null;
    }
  }
}
