
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ===== REGRAS DE USUÁRIOS E PERMISSÕES =====
    match /users/{userId} {
      allow get, update: if request.auth.uid == userId || request.auth.token.canManageUsers == true || request.auth.token.isDev == true;
      allow list, create: if request.auth.token.canManageUsers == true || request.auth.token.isDev == true;
    }

    match /users/{userId}/activityLogs/{logId} {
      allow read: if request.auth.uid == userId || request.auth.token.canManageUsers == true || request.auth.token.isDev == true;
    }

    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.canManageUsers == true || request.auth.token.isDev == true;
    }

    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.canManageUsers == true || request.auth.token.isDev == true;
    }
    
    match /directorates/{directorateId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.canManageUsers == true || request.auth.token.isDev == true;
    }

    // ===== REGRAS OPERACIONAIS (PROJETOS E TAREFAS) =====
    match /projects/{projectId} {
      allow get, list: if request.auth.token.canViewAllProjects == true || request.auth.token.isDev == true || request.auth.uid == resource.data.ownerId || request.auth.uid in resource.data.teamMembers;
      allow write: if request.auth.token.canManageProjects == true || request.auth.uid == resource.data.ownerId;
      allow create: if request.auth.token.canManageProjects == true || request.auth.token.isDev == true;
    }
    
    match /projects/{projectId}/{subcollection}/{docId} {
      allow read, write: if get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid || request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.teamMembers || request.auth.token.canViewAllProjects == true || request.auth.token.isDev == true;
    }

    match /tasks/{taskId} {
      // Regra para leitura de um único documento
      allow get: if request.auth.token.canViewAllProjects == true || request.auth.token.isDev == true || resource.data.assigneeId == request.auth.uid;
      
      // Regra para listagem de documentos
      // Gestores/Devs podem listar a coleção toda.
      // Usuários normais só podem listar tarefas atribuídas a eles.
      allow list: if request.auth.token.canViewAllProjects == true || request.auth.token.isDev == true
                  || (request.query.where.size() > 0 && request.query.where[0][0] == 'assigneeId' && request.query.where[0][2] == request.auth.uid);

      allow write: if request.auth.token.canManageProjects == true || request.auth.token.isDev == true || request.auth.uid == resource.data.assigneeId || (resource.data.assigneeId == null && request.auth.uid != null) ;
      allow create: if request.auth != null;
    }

    match /meetings/{meetingId} {
       allow read, write: if request.auth.token.canViewAllProjects == true || request.auth.token.isDev == true || request.auth.uid in resource.data.participantIds;
       allow create: if request.auth != null;
    }

    // ===== REGRAS COMERCIAIS =====
    match /contacts/{contactId} {
      allow read, write, create: if request.auth.token.canManageContacts == true || request.auth.token.isDev == true;
    }
    
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.canManageProductsAndSeals == true || request.auth.token.isDev == true;
    }
    
    match /seals/{sealId} {
      allow read, write: if request.auth.token.canManageProductsAndSeals == true || request.auth.token.isDev == true;
    }
    
    match /sealOrders/{sealOrderId} {
      allow read, write: if request.auth.token.canManageProductsAndSeals == true || request.auth.token.isDev == true;
    }
    
    // ===== REGRAS FINANCEIRAS =====
    match /reimbursements/{reimbursementId} {
      allow create: if request.auth.uid == request.resource.data.requesterId;
      allow read, update: if request.auth.uid == resource.data.requesterId || request.auth.token.canAccessFinancial == true || request.auth.token.isDev == true;
    }
    
    match /costCenters/{costCenterId} {
       allow read, write: if request.auth.token.canAccessFinancial == true || request.auth.token.isDev == true;
    }
    
    match /contracts/{contractId} {
       allow read, write: if request.auth.token.canAccessFinancial == true || request.auth.token.isDev == true;
    }

    // ===== REGRAS DE GESTÃO DE ATIVOS =====
    match /assets/{assetId} {
       allow read, write: if request.auth.token.canManageAssets == true || request.auth.token.isDev == true;
    }
    match /assets/{assetId}/{subcollection}/{docId} {
       allow read, write: if request.auth.token.canManageAssets == true || request.auth.token.isDev == true;
    }
    match /maintenances/{maintenanceId} {
       allow read, write: if request.auth.token.canManageAssets == true || request.auth.token.isDev == true;
    }
     match /assetUsageContracts/{contractId} {
       allow read, write: if request.auth.token.canManageAssets == true || request.auth.token.isDev == true;
    }
    match /documentTemplates/{templateId} {
       allow read, write: if request.auth.token.canManageAssets == true || request.auth.token.isDev == true;
    }
    
    // ===== REGRAS DE CHECKLISTS =====
    match /checklists/{checklistId} {
      allow read: if request.auth != null; 
      allow write: if request.auth.token.canManageChecklists == true || request.auth.token.isDev == true;
    }
     match /checklists/{checklistId}/items/{itemId} {
      allow read, write: if request.auth.token.canManageChecklists == true || request.auth.token.isDev == true;
    }
    match /checklistExecutions/{executionId} {
       allow read, write: if request.auth != null; 
    }

    // ===== REGRAS DE SUPORTE E LOGS =====
    match /tickets/{ticketId} {
      allow create: if request.auth.uid == request.resource.data.requesterId;
      allow read, update: if request.auth.uid == resource.data.requesterId || request.auth.token.canManageSupport == true || request.auth.token.isDev == true;
    }
    match /errorLogs/{logId} {
      allow read, write: if request.auth.token.isDev == true;
    }
    
    // Regra de fallback: nega tudo que não foi permitido explicitamente.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
