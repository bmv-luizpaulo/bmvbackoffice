
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a manager
    function isManager(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'Gestor';
    }

    // Users can read/write their own data.
    // Managers can read all user data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow list: if isManager(request.auth.uid);
    }
    
    // Notifications: Users can only access their own notifications
    match /users/{userId}/notifications/{notificationId} {
        allow read, write, list: if request.auth.uid == userId;
    }

    // Teams: Authenticated users can read, but only managers can write/create/delete
    match /teams/{teamId} {
        allow read: if request.auth != null;
        allow write: if isManager(request.auth.uid);
    }

    // Contacts: Authenticated users can read, but only managers can write/create/delete
    match /contacts/{contactId} {
        allow read: if request.auth != null;
        allow write: if isManager(request.auth.uid);
    }

    // Projects: Authenticated users can read. Project owners and managers can write.
    match /projects/{projectId} {
        allow read: if request.auth != null;
        allow write: if isManager(request.auth.uid) || request.auth.uid == resource.data.ownerId;

        // Tasks, Stages, Files: Inherit project permissions for simplicity.
        // Users can interact if they can access the project.
        match /{subcollection}/{document=**} {
            allow read, write: if request.auth != null && (isManager(request.auth.uid) || request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId || request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.teamMembers);
        }
    }
    
    // Products: Authenticated users can read, managers can write
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if isManager(request.auth.uid);
    }

    // Seals: Authenticated users can read, managers can write
    match /seals/{sealId} {
      allow read: if request.auth != null;
      allow write: if isManager(request.auth.uid);
    }
    
    // Checklists: Authenticated users can read, managers can write
    match /checklists/{checklistId}/{item=**} {
        allow read: if request.auth != null;
        allow write: if isManager(request.auth.uid);
    }

    // Chats & Messages: Users can only access chats they are a part of.
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in resource.data.userIds;
      match /messages/{messageId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
      }
    }
  }
}
