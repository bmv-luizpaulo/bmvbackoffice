
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isDev() {
      return request.auth.token.isDev == true;
    }
    
    function canManageUsers() {
      return request.auth.token.canManageUsers == true || isDev();
    }
    
    function canManageProjects() {
      return request.auth.token.canManageProjects == true || request.auth.token.canViewAllProjects == true || isDev();
    }

    // ===== REGRAS DE USUÁRIOS E PERMISSÕES =====
    match /users/{userId} {
      allow read, update: if canManageUsers() || isOwner(userId);
      allow create, delete: if canManageUsers();
    }

    match /users/{userId}/activityLogs/{logId} {
      allow read: if canManageUsers() || isOwner(userId);
      allow create: if request.auth != null; // Anyone can create their own logs
    }

    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId);
    }

    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if canManageUsers();
    }

    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if canManageUsers();
    }
    
    match /directorates/{directorateId} {
      allow read: if request.auth != null;
      allow write: if canManageUsers();
    }

    // ===== REGRAS OPERACIONAIS (PROJETOS E TAREFAS) =====
    match /projects/{projectId} {
      allow get: if canManageProjects() || request.auth.uid == resource.data.ownerId || request.auth.uid in resource.data.teamMembers;
      allow list: if canManageProjects(); // Only managers/devs can list all projects
      allow create, update, delete: if request.auth.token.canManageProjects == true || isDev();
    }
    
    match /projects/{projectId}/{subcollection}/{docId} {
      allow read, write: if canManageProjects() || get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid || request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.teamMembers;
    }

    match /tasks/{taskId} {
      allow get: if canManageProjects() || resource.data.assigneeId == request.auth.uid || (resource.data.projectId != null && request.auth.uid in get(/databases/$(database)/documents/projects/$(resource.data.projectId)).data.teamMembers);
      allow list: if canManageProjects() || (request.query.where != null && request.query.where.assigneeId == request.auth.uid);
      allow write: if request.auth.uid == resource.data.assigneeId || (resource.data.assigneeId == null && request.auth.uid != null) || canManageProjects();
      allow create: if request.auth != null;
    }

    match /meetings/{meetingId} {
       allow read, write: if request.auth.uid in resource.data.participantIds || canManageProjects();
       allow create: if request.auth != null;
    }

    // ===== REGRAS COMERCIAIS =====
    match /contacts/{contactId} {
      allow read, write: if request.auth.token.canManageContacts == true || isDev();
    }
    
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.canManageProductsAndSeals == true || isDev();
    }
    
    match /seals/{sealId} {
      allow read, write: if request.auth.token.canManageProductsAndSeals == true || isDev();
    }
    
    match /sealOrders/{sealOrderId} {
      allow read, write: if request.auth.token.canManageProductsAndSeals == true || isDev();
    }
    
    // ===== REGRAS FINANCEIRAS =====
    match /reimbursements/{reimbursementId} {
      allow create: if request.auth.uid == request.resource.data.requesterId;
      allow read, update: if request.auth.uid == resource.data.requesterId || request.auth.token.canAccessFinancial == true || isDev();
      allow list: if request.auth.token.canAccessFinancial == true || isDev() || (request.query.where != null && request.query.where.requesterId == request.auth.uid);
    }
    
    match /costCenters/{costCenterId} {
       allow read, write: if request.auth.token.canAccessFinancial == true || isDev();
    }
    
    match /contracts/{contractId} {
       allow read, write: if request.auth.token.canAccessFinancial == true || isDev();
    }

    // ===== REGRAS DE GESTÃO DE ATIVOS =====
    match /assets/{assetId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    match /assets/{assetId}/{subcollection}/{docId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    match /maintenances/{maintenanceId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
     match /assetUsageContracts/{contractId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
     match /assetUsageContracts/{contractId}/annexes/{annexId} {
      allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    match /documentTemplates/{templateId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    
    // ===== REGRAS DE CHECKLISTS =====
    match /checklists/{checklistId} {
      allow read: if request.auth != null; 
      allow write: if request.auth.token.canManageChecklists == true || isDev();
    }
     match /checklists/{checklistId}/items/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.canManageChecklists == true || isDev();
    }
    match /checklistExecutions/{executionId} {
       allow read, write: if request.auth != null; 
    }

    // ===== REGRAS DE SUPORTE E LOGS =====
    match /tickets/{ticketId} {
      allow create: if request.auth.uid == request.resource.data.requesterId;
      allow read, update: if request.auth.uid == resource.data.requesterId || request.auth.token.canManageSupport == true || isDev();
      allow list: if request.auth.token.canManageSupport == true || isDev() || (request.query.where != null && request.query.where.requesterId == request.auth.uid);
    }
    match /errorLogs/{logId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isDev();
    }
    
    // ===== REGRAS DE CONVERSAS (CHAT) =====
    match /conversations/{conversationId} {
        allow get: if request.auth.uid in resource.data.userIds || resource.data.isGlobal == true;
        allow list: if request.auth.uid in resource.data.userIds || resource.data.isGlobal == true;
        allow update: if request.auth.uid in resource.data.userIds;
        allow create: if request.auth.uid != null;
    }

    match /conversations/{conversationId}/messages/{messageId} {
        allow read: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds.hasAny([request.auth.uid]);
        allow create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds
                      && request.resource.data.senderId == request.auth.uid;
    }

    // Regra de fallback: nega tudo que não foi permitido explicitamente.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
