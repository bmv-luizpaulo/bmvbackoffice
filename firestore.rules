
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isManager() {
      return request.auth.token.isManager == true || request.auth.token.isDev == true;
    }

    function isDev() {
        return request.auth.token.isDev == true;
    }

    // ===== REGRAS DE USUÁRIOS E PERMISSÕES =====
    match /users/{userId} {
      allow read, update: if isManager() || isOwner(userId);
      allow create, delete: if isManager();
    }

    match /users/{userId}/activityLogs/{logId} {
      allow read, create: if isManager() || isOwner(userId);
    }

    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId);
    }

    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if isManager();
    }

    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if isManager();
    }
    
    match /directorates/{directorateId} {
      allow read: if request.auth != null;
      allow write: if isManager();
    }

    // ===== REGRAS OPERACIONAIS (PROJETOS E TAREFAS) =====
    match /projects/{projectId} {
      // GET: Um usuário pode ler um projeto se for gestor, dono ou membro da equipe.
      allow get: if isManager() || request.auth.uid == resource.data.ownerId || request.auth.uid in resource.data.teamMembers;
      
      // LIST: Um gestor pode listar todos. Um usuário comum pode listar se a consulta for filtrada por seu ID.
      allow list: if isManager() || (request.auth.uid != null && (
          (request.query.where.field == "ownerId" && request.query.where.value == request.auth.uid) ||
          (request.query.where.field == "teamMembers" && request.query.where.operator == "array-contains" && request.query.where.value == request.auth.uid)
      ));

      // WRITE: Escrita (create, update, delete) permitida para gestores ou o dono do projeto.
      allow write: if isManager() || (request.resource.data.ownerId == request.auth.uid);
    }
    
    match /projects/{projectId}/{subcollection}/{docId} {
      allow read, write: if isManager() || get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid || request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.teamMembers;
    }

    match /tasks/{taskId} {
      allow get: if isManager() || resource.data.assigneeId == request.auth.uid || request.auth.uid in get(/databases/$(database)/documents/projects/$(resource.data.projectId)).data.teamMembers;
      allow list: if isManager() || (request.query.where != null && request.query.where.assigneeId == request.auth.uid);
      allow write: if isManager() || request.auth.uid == resource.data.assigneeId || (resource.data.assigneeId == null && request.auth.uid != null);
      allow create: if request.auth != null;
    }

    match /meetings/{meetingId} {
       allow read, write: if isManager() || request.auth.uid in resource.data.participantIds;
       allow create: if request.auth != null;
    }

    // ===== REGRAS COMERCIAIS =====
    match /contacts/{contactId} {
      allow read, write: if request.auth.token.canManageContacts == true || isDev();
      allow create: if request.auth.token.canManageContacts == true || isDev();
    }
    
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.canManageProductsAndSeals == true || isDev();
    }
    
    match /seals/{sealId} {
      allow read, write: if request.auth.token.canManageProductsAndSeals == true || isDev();
    }
    
    match /sealOrders/{sealOrderId} {
      allow read, write: if request.auth.token.canManageProductsAndSeals == true || isDev();
    }
    
    // ===== REGRAS FINANCEIRAS =====
    match /reimbursements/{reimbursementId} {
      allow create: if request.auth.uid == request.resource.data.requesterId;
      allow read, update: if request.auth.uid == resource.data.requesterId || request.auth.token.canAccessFinancial == true || isDev();
    }
    
    match /costCenters/{costCenterId} {
       allow read, write: if request.auth.token.canAccessFinancial == true || isDev();
    }
    
    match /contracts/{contractId} {
       allow read, write: if request.auth.token.canAccessFinancial == true || isDev();
    }

    // ===== REGRAS DE GESTÃO DE ATIVOS =====
    match /assets/{assetId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    match /assets/{assetId}/{subcollection}/{docId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    match /maintenances/{maintenanceId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
     match /assetUsageContracts/{contractId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
     match /assetUsageContracts/{contractId}/annexes/{annexId} {
      allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    match /documentTemplates/{templateId} {
       allow read, write: if request.auth.token.canManageAssets == true || isDev();
    }
    
    // ===== REGRAS DE CHECKLISTS =====
    match /checklists/{checklistId} {
      allow read: if request.auth != null; 
      allow write: if request.auth.token.canManageChecklists == true || isDev();
    }
     match /checklists/{checklistId}/items/{itemId} {
      allow read, write: if request.auth.token.canManageChecklists == true || isDev();
    }
    match /checklistExecutions/{executionId} {
       allow read, write: if request.auth != null; 
    }

    // ===== REGRAS DE SUPORTE E LOGS =====
    match /tickets/{ticketId} {
      allow create: if request.auth.uid == request.resource.data.requesterId;
      allow read, update: if request.auth.uid == resource.data.requesterId || request.auth.token.canManageSupport == true || isDev();
    }
    match /errorLogs/{logId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isDev();
    }
    
    // ===== REGRAS DE CONVERSAS (CHAT) =====
    match /conversations/{conversationId} {
        // Leitura: Se o usuário faz parte da conversa OU a conversa é global
        allow get: if request.auth.uid in resource.data.userIds || resource.data.isGlobal == true;
        
        // Listagem: Se o usuário faz parte da conversa OU a conversa é global
        allow list: if request.auth.uid in resource.data.userIds || resource.data.isGlobal == true;

        // Escrita (atualizar lastMessage, etc.): Apenas membros da conversa
        allow update: if request.auth.uid in resource.data.userIds;
        
        // Criação: Qualquer usuário autenticado pode criar uma conversa
        allow create: if request.auth.uid != null;
    }

    match /conversations/{conversationId}/messages/{messageId} {
        // Leitura: Apenas membros da conversa pai
        allow read: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds.hasAny([request.auth.uid]);
        
        // Escrita (enviar mensagem): Apenas membros da conversa e o remetente deve ser o usuário autenticado
        allow create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds
                      && request.resource.data.senderId == request.auth.uid;
    }

    // Regra de fallback: nega tudo que não foi permitido explicitamente.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
