rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isDev() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId != null &&
             exists(/databases/$(database)/documents/roles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId)) &&
             get(/databases/$(database)/documents/roles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId)).data.isDev == true;
    }

    function isManager() {
      // Check if the user document and role document exist before trying to access them.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId != null &&
             exists(/databases/$(database)/documents/roles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId)) &&
             get(/databases/$(database)/documents/roles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId)).data.isManager == true;
    }
    
    function isProjectMember(projectId) {
      let project = get(/databases/$(database)/documents/projects/$(projectId)).data;
      return request.auth.uid == project.ownerId || request.auth.uid in project.teamMembers;
    }

    match /users/{userId} {
      allow read: if isManager() || request.auth.uid == userId;
      allow write: if isDev() || request.auth.uid == userId;

      match /notifications/{notificationId} {
        allow read, write: if isDev() || request.auth.uid == userId;
      }
    }

    match /projects/{projectId} {
      allow create: if isDev() || request.auth != null;
      allow read: if isDev() || isManager() || isProjectMember(projectId);
      allow update: if isDev() || isManager() || isProjectMember(projectId);
      allow delete: if isDev() || isManager();

      match /stages/{stageId} {
        allow read, write: if isDev() || isManager();
      }

      match /tasks/{taskId} {
         allow read: if isDev() || isManager() || isProjectMember(projectId);
         allow create, update: if isDev() || isManager() || isProjectMember(projectId);
         allow delete: if isDev() || isManager();
      }
      
      match /files/{fileId} {
         allow read, write: if isDev() || isManager() || isProjectMember(projectId);
      }
    }

    match /teams/{teamId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }
    
    match /directorates/{directorateId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /roles/{roleId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /contacts/{contactId} {
      allow read, write: if request.auth != null;
    }
    
    match /contracts/{contractId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /products/{productId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /seals/{sealId} {
        allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /checklists/{checklistId} {
        allow read: if request.auth != null;
        allow write: if isDev() || isManager();

        match /items/{itemId} {
            // Allow reading items to anyone who can read the checklist
            allow read: if get(/databases/$(database)/documents/checklists/$(checklistId)).data != null;
            // Allow updating (checking/commenting) to any authenticated user
            allow update: if request.auth != null;
            // Only managers can create/delete items
            allow create, delete: if isDev() || isManager();
        }
    }

    match /checklistExecutions/{executionId} {
      allow read, create: if isDev() || isManager() || request.auth != null;
      allow update, delete: if isDev() || isManager();
    }
    
    match /assets/{assetId}/{document=**} {
        allow read, write: if isDev() || isManager() || request.auth != null;
    }
    
    match /maintenances/{maintenanceId} {
        allow read, write: if isDev() || isManager() || request.auth != null;
    }

    match /reimbursements/{reimbursementId} {
      allow read, create, update, delete: if isDev() || isManager() || request.auth.uid == resource.data.requesterId;
    }
    
    match /costCenters/{costCenterId} {
      allow read, write: if isDev() || isManager() || request.auth != null;
    }
    
    match /conversations/{conversationId} {
      allow read, update, delete: if isDev() || request.auth.uid in resource.data.userIds;
      allow create: if isDev() || request.auth.uid in request.resource.data.userIds;
    }

    match /conversations/{conversationId}/messages/{messageId} {
       allow read, write: if isDev() || get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds.hasAny([request.auth.uid]);
    }

    match /tickets/{ticketId} {
      allow read, create, update: if isDev() || request.auth != null;
      allow delete: if isDev() || isManager();
    }

    match /developerTools/{toolId} {
      allow read, write: if isDev();
    }
  }
}
