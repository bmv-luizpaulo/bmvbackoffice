rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /projects/{projectId}/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /teams/{teamId} {
      allow read, write: if request.auth != null;
    }
    
    match /directorates/{directorateId} {
      allow read, write: if request.auth != null;
    }

    match /roles/{roleId} {
      allow read, write: if request.auth != null;
    }

    match /contacts/{contactId} {
      allow read, write: if request.auth != null;
    }
    
    match /contracts/{contractId} {
      allow read, write: if request.auth != null;
    }

    match /chats/{chatId} {
      allow get, write: if request.auth.uid in resource.data.userIds;
      allow list: if request.auth != null;

      match /messages/{messageId} {
         allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
      }
    }
    
    match /products/{productId} {
      allow read, write: if request.auth != null;
    }

    match /seals/{sealId} {
        allow read, write: if request.auth != null;
    }

    match /checklists/{checklistId}/{document=**} {
        allow read, write: if request.auth != null;
    }
    
    match /assets/{assetId}/{document=**} {
        allow read, write: if request.auth != null;
    }
    
    match /maintenances/{maintenanceId} {
        allow read, write: if request.auth != null;
    }

    match /reimbursements/{reimbursementId} {
      allow read, write: if request.auth != null;
    }
    
    match /costCenters/{costCenterId} {
      allow read, write: if request.auth != null;
    }
  }
}
